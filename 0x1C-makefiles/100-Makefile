CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(wildcard *~) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): $(SRC) m.h

.PHONY: all clean oclean fclean re
